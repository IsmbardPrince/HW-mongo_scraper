  <!-- Modal Structure -->
  <div id="add-comment-modal" class="modal">
    <div class="modal-content">
      <h4>Add a Comment for Article:</h4>
      <p id="add-comment-article-title">article title</p>
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <textarea id="comment-text" class="materialize-textarea"></textarea>
              <label for="comment-text">Your Comments:</label>
            </div>
          </div>
        </form>
      </div>
            
    </div>
    <div class="modal-footer">
      <a class=" modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
      <a id="comment-save" class=" modal-action modal-close waves-effect waves-green btn-flat" 
      comment-id="" article-id="">Save</a>
    </div>
  </div>
